<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd"
       default-lazy-init="true">

    <bean id="client" class="com.epam.spring.core.beans.Client">
        <constructor-arg name="id" value="${id}"/>
        <constructor-arg name="fullName" value="${name}"/>
        <property name="greeting" value="${greeting}"/>
    </bean>

    <bean id="app" class="com.epam.spring.core.App">

        <constructor-arg name="client" ref="client"/>
        <constructor-arg name="eventLogger" ref="eventLogger"/>
        <constructor-arg name="loggerMap">
            <map>
                <entry key="INFO" value-ref="consoleEventLogger"/>
                <entry key="ERROR" value-ref="combinedEventLogger"/>
            </map>
        </constructor-arg>

        <!--<property name="properties"><null/></property>-->

        <property name="properties">
            <props>
                <prop key="111">111</prop>
                <prop key="222">222</prop>
                <prop key="333">444</prop>
                <prop key="444">444</prop>
                <prop key="555">555</prop>
            </props>
        </property>
    </bean>

</beans>
