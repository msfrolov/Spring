<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd"
       default-lazy-init="true">

    <bean id="client" class="com.epam.spring.core.beans.Client">
        <constructor-arg name="id" value="1"/>
        <constructor-arg name="fullName" value="John Smith"/>
        <property name="greeting" value="Hello there"/>
    </bean>

    <bean id="app" class="com.epam.spring.core.App">

        <constructor-arg name="client" ref="client"/>
        <constructor-arg name="eventLogger" ref="eventLogger"/>
        <constructor-arg name="loggerMap">
            <map>
                <entry key="INFO" value-ref="consoleEventLogger"/>
                <entry key="ERROR" value-ref="combinedEventLogger"/>
            </map>
        </constructor-arg>
    </bean>

</beans>
