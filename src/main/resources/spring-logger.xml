<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd"
       default-lazy-init="true">

    <bean id="consoleEventLogger" class="com.epam.spring.core.loggers.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="com.epam.spring.core.loggers.FileEventLogger"
          init-method="init">
        <property name="filename" value="C:\123\123.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" name="eventLogger" class="com.epam.spring.core.loggers.CacheFileEventLoggerImpl"
          destroy-method="destroy"
          parent="fileEventLogger">
        <property name="cacheSize" value="3"/>
    </bean>

    <bean id="combinedEventLogger" class="com.epam.spring.core.loggers.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="fileEventLogger"/>
            </list>
        </constructor-arg>
    </bean>

</beans>
